generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // PgBouncer URL (runtime)
  directUrl = env("DIRECT_URL")     // Direct Postgres URL (migrations/db push)
}

model Belief {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  title           String
  text            String
  topics          Json     @db.JsonB
  author          String?
  category        String?
  approvalDetails String?
  sourceDate      String?
  lastReviewDate  String?
  certainty       Float?   
  importance      Float?   
}

